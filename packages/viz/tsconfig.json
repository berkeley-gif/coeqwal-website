{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "jsx": "react-jsx",
    "esModuleInterop": true
  },
  "include": ["src/**/*", "hooks/**/*", "context/**/*"],
  "exclude": ["node_modules", "dist"]
}
